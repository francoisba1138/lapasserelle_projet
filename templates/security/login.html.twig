{% extends 'base-nav.html.twig' %}


{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/lodging.css')}}"> 
<link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}


<section class="vh-100" style="background-color: #ffffff;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  

              <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
                <div class="mb-3">
                    <h3 class="mb-5">Bonjour {{ app.user }}</h3>
                   <a class="btn btn-primary btn-lg btn-block" href="{{ path('app_logout') }}">Déconnection</a>
                </div>
            
          
                {% else %}

                
              <h3 class="mb-5">Connexion à votre compte Tripee</h3>

              <div class="form-outline mb-4">
                
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-l" autocomplete="email" required autofocus>
                <label class="form-label" for="inputEmail">Email</label>
              </div>
  
              <div class="form-outline mb-4">
                           
                <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required>
                <label class="form-label" for="inputPassword">Mot de passe</label>


              </div>
  
              <input type="hidden" name="_csrf_token"
              value="{{ csrf_token('authenticate') }}">
              <button class="btn btn-secondary btn-lg btn-block" type="submit">Login</button>

              {% endif %}
  </form>
              <hr class="my-4">
  
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>



{% endblock %}
